<openerp>
    <data>
        <record id="sequence_sale_note_journal" model="ir.sequence">
            <field name="name">Account Default Sales Notes Journal</field>
            <field eval="3" name="padding"/>
            <field name="prefix">%(year)s/</field>
        </record>

        <record id="account.sequence_sale_journal" model="ir.sequence">
            <field name="name">Account Default Sales Journal</field>
            <field eval="3" name="padding"/>
            <field name="prefix">%(year)s/</field>
        </record>

        <!--
        Account Journal
        -->

        <record id="sales_note_journal" model="account.journal">
            <field name="name">Sales Note Journal</field>
            <field name="code">Nota</field>
            <field name="type">sale</field>
            <field name="sequence_id" ref="sequence_sale_note_journal"/>
            <field name="default_credit_account_id" ref="account.a_sale"/>
            <field name="default_debit_account_id" ref="account.a_sale"/>
            <field name="analytic_journal_id" ref="account.cose_journal_sale"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
        <!--<label string="Draft Invoice" attrs="{'invisible': ['|',('code', '=', 'Nota'), '|',('state','not in',('draft',)), ('type','&lt;&gt;','out_invoice')]}"/>-->
    </data>
</openerp>